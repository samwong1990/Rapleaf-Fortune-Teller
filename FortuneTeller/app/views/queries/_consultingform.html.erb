<%= form_for(@query) do |f| %>
  <% if @query.errors.any? %>
    <div id="error_explanation">
      <h2>There are <%= pluralize(@query.errors.count, "error") %> things I want to know from you, don't be shy.</h2>
      <ul>
      <% @query.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

    </div>
  <% end %>

  <div class="field">
    <%= f.label :'My Name is' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :'My email is' %><br />
    <%= f.text_field :email %>
  </div>

	<p>Paste in your customers' emails</p>
  <div class="field">
    <%= f.label :'one per line' %><br />
    <%= f.text_area :dataset ,rows: 5 %>
  </div>
  <div class="actions">
    <%= f.submit :'Guide me Sam', :class => "btn primary"%>
  </div>
<% end %>
